<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size_user), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
  <%= t("posted") %><%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user.current_user?(micropost.user) %>
      <%= link_to t("delete"), micropost, method: :delete,
        data:{confirm: t("you_sure?")}%>
    <% end %>
  </span>
</li>
